{
  "train_batch_size": 8,
  "train_micro_batch_size_per_gpu": 8,
  "steps_per_print": 1000,
  "gradient_clipping": 5.0,
  "optimizer": {
    "type": "Adam",
    "adam_w_mode": true,
    "params": {
      "lr": 0.001,
      "weight_decay": 0.1,
      "bias_correction": true,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-08
    }
  },
  "fp16": {
    "enabled": true,
    "loss_scale": 0,
    "initial_scale_power": 7,
    "loss_scale_window": 128
  }
}